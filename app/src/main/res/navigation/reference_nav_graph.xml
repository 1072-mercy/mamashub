<?xml version="1.0" encoding="utf-8" ?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reference_nav_graph"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/dashboard"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_patient_list"
            app:destination="@id/patient_list" />
    </fragment>

    <fragment
        android:id="@+id/patient_list"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.PatientListFragment"
        android:label="Patient List"
        tools:layout="@layout/patient_list_view">



        <action
            android:id="@+id/action_patient_list_to_addPatientFragment"
            app:destination="@id/addPatientFragment" />


        <argument
            android:name="step"
            app:argType="string" />


    </fragment>





    <fragment
        android:id="@+id/addPatientFragment"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.AddPatientFragment"
        android:label="@string/add_patient"
        tools:layout="@layout/add_patient_fragment" />

</navigation>
