<?xml version="1.0" encoding="utf-8" ?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reference_nav_graph"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/dashboard"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_patient_list"
            app:destination="@id/patient_list" />
    </fragment>

    <fragment
        android:id="@+id/patient_list"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.PatientListFragment"
        android:label="Patient List"
        tools:layout="@layout/patient_list_view">

        <action
            android:id="@+id/navigate_to_product_detail"
            app:destination="@id/patient_details" />

        <action
            android:id="@+id/action_patient_list_to_addPatientFragment"
            app:destination="@id/addPatientFragment" />

        <argument
            android:name="step"
            app:argType="string" />


    </fragment>



    <fragment
        android:id="@+id/patient_details"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.PatientDetailsFragment"
        android:label="Patient Details"
        tools:layout="@layout/patient_detail">
        <action
            android:id="@+id/action_patient_details_to_screenEncounterFragment"
            app:destination="@id/screenerEncounterFragment" />
        <argument
            android:name="patient_id"
            app:argType="string" />
        <argument
            android:name="code"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/screenerEncounterFragment"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.ScreenerFragment"
        android:label="Screen Encounter"
        tools:layout="@layout/screener_encounter_fragment">
        <argument
            android:name="patient_id"
            app:argType="string" />
        <argument
            android:name="question"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />

    </fragment>



    <fragment
        android:id="@+id/addPatientFragment"
        android:name="com.intellisoft.kabarakmhis.fhir.screens.AddPatientFragment"
        android:label="@string/add_patient"
        tools:layout="@layout/add_patient_fragment" />

</navigation>
