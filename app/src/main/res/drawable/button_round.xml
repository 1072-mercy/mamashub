<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/save" />
            <gradient android:angle="-90" android:startColor="@color/save" android:endColor="@color/save"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="@color/save" />
            <solid android:color="@color/save"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <padding android:left="70dp" android:right="70dp" />
            <stroke android:width="1dip" android:color="@color/save" />
            <gradient android:angle="-90" android:startColor="@color/save" android:endColor="@color/save" />
        </shape>
    </item>
</selector>