<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_5dp"
    android:layout_margin="@dimen/_5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Add Regimen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Select Regimen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerRegimen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TableLayout
            android:background="@drawable/layout_dotted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableRow
                android:layout_marginTop="@dimen/_15dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Regimen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:singleLine="true"
                    android:id="@+id/etRegimen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_outline_trans"
                    android:hint="0"
                    android:textColor="@color/black" />

            </TableRow>

            <TableRow
                android:layout_marginTop="@dimen/_15dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etAmount"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_outline_trans"
                    android:hint="0"
                    android:textColor="@color/black" />

            </TableRow>

            <TableRow
                android:layout_marginTop="@dimen/_15dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Dosage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etDosageAmount"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_outline_trans"
                    android:hint="0"
                    android:textColor="@color/black" />

            </TableRow>

            <TableRow
                android:layout_marginTop="@dimen/_15dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etFrequency"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edit_outline_trans"
                    android:hint="0"
                    android:textColor="@color/black" />

            </TableRow>

        </TableLayout>

        <Button
            android:layout_marginTop="@dimen/_15dp"
            android:id="@+id/btnSaveRegimen"
            android:textAllCaps="false"
            android:text="Save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</RelativeLayout>