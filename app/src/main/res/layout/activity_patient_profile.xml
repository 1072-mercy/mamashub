<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".new_designs.screens.PatientProfile">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/_100dp"
            android:layout_height="@dimen/_100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/profile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />


        </LinearLayout>

        <TableLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Patient Name  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textColor="@color/black" />

            </TableRow>
            <TableRow>

                <TextView
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="ANC ID  "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />

            </TableRow>
            <TableRow>

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:text=":"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jane Doe"
                    android:textColor="@color/black" />

            </TableRow>



        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Next of Kin Details:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardCornerRadius="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayoutCall"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvKinDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:padding="@dimen/_15dp"
                    android:text="Patient Number"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    app:drawableStartCompat="@drawable/ic_action_call" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginBottom="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            android:textColor="@color/black"
            android:text="Patient Information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/findPatientsCardView"                            android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/imageViewEditPatient"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/register" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/edit_patient"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/navigateMedicalHistory"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardviewHistory"
                                android:layout_width="90dp"
                                android:layout_height="90dp">


                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/medicalHistory"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/surgery" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/action_medical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/navigatePhysicalExam"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewPhysicalExam"
                                android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/imageViewPhysical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/check" />

                                </LinearLayout>




                        </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/physical_exam"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:layout_marginTop="@dimen/_15dp">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewPastPreg"                            android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/previousPregnancy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/pregnant" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Previous Pregnancy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewAntenatal"                            android:layout_width="90dp"
                                android:layout_height="90dp">


                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/antenatalProfile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/antenatalprofile" />

                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/antenatal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/navigateBirthPlan"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewBirthPlan"
                                android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/birthPlan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/birth_plan" />

                                </LinearLayout>




                        </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/birth_plan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:layout_marginTop="@dimen/_15dp">

                        <LinearLayout
                            android:id="@+id/navigateClinicalNotes"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewClinicalNotes"
                                android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/clinicalNotes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/clinical_notes" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/clinical_notes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/navigatePresent"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewPresentPregnancy"                            android:layout_width="90dp"
                                android:layout_height="90dp">


                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/presentPregnancy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/present_pregnancy" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/present_pregnancy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewPreventiveServices"
                                android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/preventiveServices"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/preventive_services" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/preventive_services"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:layout_marginTop="@dimen/_15dp">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewMalariaProphylaxis"                            android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/malariaProphylaxis"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/malaria_prophylaxis" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/malaria_prophylaxis"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_weight="1"
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewMaternalSerology"                            android:layout_width="90dp"
                                android:layout_height="90dp">


                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/maternalSerology"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/maternal_serology" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Maternal Serology"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/navigateWeight"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="10dp"
                                android:id="@+id/cardViewWeightChart"
                                android:layout_width="90dp"
                                android:layout_height="90dp">

                                <LinearLayout
                                    android:background="@color/accent"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:paddingBottom="@dimen/_5dp"
                                        android:id="@+id/weightChart"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:contentDescription="@string/dashboard_maternity_icon_label"
                                        android:src="@drawable/weight_monitoring" />

                                </LinearLayout>




                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Weight Monitoring Chart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </TableRow>

                </TableLayout>

            </LinearLayout>




        </ScrollView>


    </LinearLayout>



</LinearLayout>