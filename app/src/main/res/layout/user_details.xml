<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_5dp"
    android:layout_height="wrap_content">

    <TableLayout
        android:id="@+id/linearBar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/textColor_light"
                android:textStyle="bold"
                android:text="Client: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tvPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:textStyle="bold"
                android:text="ANC ID: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tvAncId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/textColor_light"
                android:textStyle="bold"
                android:text="Edd: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tvEdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:textStyle="bold"
                android:text="Gravida: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tvGravida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/textColor_light"
                android:textStyle="bold"
                android:text="Height: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:textStyle="bold"
                android:text="Parity: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/textColor_light"
                android:layout_weight="1"
                android:text=""
                android:id="@+id/tvParity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>




    </TableLayout>

</RelativeLayout>